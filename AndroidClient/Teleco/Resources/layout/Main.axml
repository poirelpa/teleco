<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_view">
    <TableLayout
        android:id="@+id/fbx_teleco"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:shrinkColumns="0,1,2"
        android:background="#9C8C76"
        android:foreground="#ffffff">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="AV"
                android:id="@+id/fbx_av"
                android:background="#00000000"/>
            <Button
                android:layout_column="2"
                android:text="!"
                android:id="@+id/fbx_power"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#00000000">
            <Button
                android:text="1"
                android:id="@+id/fbx_1"
                android:background="#00000000" />
            <Button
                android:text="2"
                android:id="@+id/fbx_2"
                android:background="#00000000" />
            <Button
                android:text="3"
                android:id="@+id/fbx_3"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="4"
                android:id="@+id/fbx_4"
                android:background="#00000000" />
            <Button
                android:text="5"
                android:id="@+id/fbx_5"
                android:background="#00000000" />
            <Button
                android:text="6"
                android:id="@+id/fbx_6"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="7"
                android:id="@+id/fbx_7"
                android:background="#00000000" />
            <Button
                android:text="8"
                android:id="@+id/fbx_8"
                android:background="#00000000" />
            <Button
                android:text="9"
                android:id="@+id/fbx_9"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="0"
                android:id="@+id/fbx_0"
                android:layout_column="1"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:id="@+id/fbx_back"
                android:background="#ff2200"
                android:textColor="#9C8C76"
                android:text="PRE"
                android:textStyle="bold" />
            <Button
                android:text="▲"
                android:id="@+id/fbx_up"
                android:background="#00000000" />
            <Button
                android:text="SRC"
                android:id="@+id/fbx_search"
                android:background="#38a5ff"
                android:textColor="#9C8C76"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:id="@+id/fbx_left"
                android:background="#00000000"
                android:text="◄" />
            <Button
                android:text="OK"
                android:id="@+id/fbx_enter"
                android:background="#00000000" />
            <Button
                android:text="►"
                android:id="@+id/fbx_right"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="M"
                android:id="@+id/fbx_menu"
                android:background="#21ed21"
                android:textColor="#9C8C76"
                android:textStyle="bold" />
            <Button
                android:text="▼"
                android:id="@+id/fbx_down"
                android:background="#00000000" />
            <Button
                android:text="i"
                android:id="@+id/fbx_info"
                android:background="#ffee00"
                android:textColor="#9C8C76"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="free"
                android:id="@+id/fbx_free"
                android:layout_span="3"
                android:textColor="#ff2200"
                android:textStyle="bold|italic"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textSize="30dp" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="v+"
                android:id="@+id/fbx_volp"
                android:background="#00000000" />
            <Button
                android:text="M"
                android:id="@+id/fbx_mute"
                android:background="#00000000" />
            <Button
                android:text="c+"
                android:id="@+id/fbx_chanp"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="v-"
                android:id="@+id/fbx_volm"
                android:background="#00000000" />
            <Button
                android:text="o"
                android:id="@+id/fbx_record"
                android:textColor="#ff2200"
                android:textStyle="bold"
                android:background="#00000000" />
            <Button
                android:text="c-"
                android:id="@+id/fbx_chanm"
                android:background="#00000000" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:text="⏮"
                android:id="@+id/fbx_rewind"
                android:background="#00000000" />
            <Button
                android:text="⏯"
                android:id="@+id/fbx_play"
                android:background="#00000000" />
            <Button
                android:text="⏭"
                android:id="@+id/fbx_forward"
                android:background="#00000000" />
        </TableRow>
    </TableLayout>
