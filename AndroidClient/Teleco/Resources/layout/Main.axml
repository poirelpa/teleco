    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/tv_teleco"
            android:shrinkColumns="0,1,2"
            android:background="#333333"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="	⏽"
                    android:id="@+id/tv_on"
                    android:background="#00000000"
                    android:textStyle="bold" />
                <Button
                    android:text="π"
                    android:id="@+id/tv_rpi"
                    android:background="#00000000"
                    android:layout_column="2" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="⏾"
                    android:id="@+id/tv_standby"
                    android:background="#00000000"
                    android:textStyle="bold" />
                <Button
                    android:text="free"
                    android:id="@+id/tv_free"
                    android:background="#00000000"
                    android:layout_column="2" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="tv"
                    android:layout_column="1"
                    android:textColor="#ffee00"
                    android:textStyle="bold|italic"
                    android:textAllCaps="false"
                    android:background="#00000000" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/kodi_teleco"
            android:shrinkColumns="0,1,2"
            android:background="#2C424A"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="A"
                    android:background="#00000000"
                    android:id="@+id/kodi_firstpage" />
                <Button
                    android:background="#00000000"
                    android:id="@+id/kodi_pageup"
                    android:text="⇞" />
                <Button
                    android:text="L⇞"
                    android:background="#00000000"
                    android:id="@+id/kodi_prevletter" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="Z"
                    android:background="#00000000"
                    android:id="@+id/kodi_lastpage" />
                <Button
                    android:text="⇟"
                    android:background="#00000000"
                    android:id="@+id/kodi_pagedown" />
                <Button
                    android:background="#00000000"
                    android:id="@+id/kodi_nextletter"
                    android:text="L⇟" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:id="@+id/kodi_back"
                    android:background="#ff2200"
                    android:textColor="#2c424a"
                    android:text="PRE"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/kodi_up"
                    android:background="#00000000"
                    android:text="▲" />
                <Button
                    android:text="!"
                    android:id="@+id/kodi_quit"
                    android:background="#38a5ff"
                    android:textColor="#2c424a" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:id="@+id/kodi_left"
                    android:background="#00000000"
                    android:text="◄" />
                <Button
                    android:text="OK"
                    android:id="@+id/kodi_ok"
                    android:background="#00000000" />
                <Button
                    android:id="@+id/kodi_right"
                    android:background="#00000000"
                    android:text="►" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="M"
                    android:id="@+id/kodi_menu"
                    android:background="#21ed21"
                    android:textColor="#2c424a"
                    android:textStyle="bold" />
                <Button
                    android:text="▼"
                    android:id="@+id/kodi_down"
                    android:background="#00000000" />
                <Button
                    android:text="i"
                    android:id="@+id/kodi_info"
                    android:background="#ffee00"
                    android:textColor="#2c424a"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="kodi"
                    android:id="@+id/kodi_start"
                    android:layout_span="3"
                    android:textColor="#38A5FF"
                    android:textStyle="bold|italic"
                    android:textAllCaps="false"
                    android:background="#00000000"
                    android:textSize="30dp" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="V-"
                    android:id="@+id/kodi_volumedown"
                    android:background="#00000000" />
                <Button
                    android:text="M"
                    android:id="@+id/kodi_mute"
                    android:background="#00000000" />
                <Button
                    android:text="V+"
                    android:id="@+id/kodi_volumeup"
                    android:background="#00000000" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="⏪"
                    android:id="@+id/kodi_stepback"
                    android:background="#00000000" />
                <Button
                    android:id="@+id/kodi_stop"
                    android:background="#00000000"
                    android:typeface="monospace"
                    android:text="█ " />
                <Button
                    android:text="⏩"
                    android:id="@+id/kodi_stepforward"
                    android:background="#00000000"
                    android:typeface="monospace" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <Button
                    android:text="⏮"
                    android:id="@+id/kodi_skipprevious"
                    android:background="#00000000" />
                <Button
                    android:id="@+id/kodi_playpause"
                    android:background="#00000000"
                    android:text="⏯" />
                <Button
                    android:text="⏭"
                    android:id="@+id/kodi_skipnext"
                    android:background="#00000000" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>